<GridPane fx:id="rootPane" prefHeight="540.0" prefWidth="960.0" style="-fx-background-color: #000;" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="sample.rewardScreenController">
   <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints minHeight="10.0" percentHeight="50.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
   </rowConstraints>
   <children>
      <ImageView fx:id="koruImg1" fitHeight="500.0" fitWidth="960.0" preserveRatio="true" GridPane.halignment="CENTER" GridPane.valignment="TOP">
         <image>
            <Image url="@koru1.png" />
         </image>
      </ImageView>
      <ImageView fx:id="koruImg2" fitHeight="500.0" fitWidth="960.0" preserveRatio="true" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="BOTTOM">
         <image>
            <Image url="@koru2.png" />
         </image>
      </ImageView>
      <VBox alignment="CENTER" spacing="30.0" GridPane.halignment="CENTER" GridPane.rowSpan="2147483647" GridPane.valignment="CENTER">
         <children>
            <Label fx:id="promptLabel" alignment="CENTER" text="YOUR SCORE IS" textFill="WHITE">
               <font>
                  <Font name="Heiti TC Medium" size="15.0" />
               </font>
            </Label>
            <Label fx:id="userScoreLabel" alignment="CENTER" textAlignment="CENTER" textFill="WHITE">
               <font>
                  <Font name="Heiti TC Medium" size="40.0" />
               </font>
            </Label>
            <Label fx:id="messageLabel" alignment="CENTER" text="Tēnā Rawa Atu Koe" textFill="WHITE">
               <font>
                  <Font name="Heiti TC Medium" size="20.0" />
               </font>
            </Label>
            <HBox alignment="CENTER" spacing="25.0">
               <children>
                  <Button fx:id="playAgainBtn" mnemonicParsing="false" onAction="#newQuiz" prefHeight="50.0" prefWidth="200.0" text="Play Again">
                     <font>
                        <Font name="Heiti TC Medium" size="20.0" />
                     </font>
                  </Button>
                  <Button fx:id="mainMenuBtn" mnemonicParsing="false" onAction="#backToMainMenu" prefHeight="50.0" prefWidth="200.0" text="Main Menu">
                     <font>
                        <Font name="Heiti TC Medium" size="20.0" />
                     </font>
                  </Button>
               </children>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </HBox>
         </children>
         <GridPane.margin>
            <Insets bottom="40.0" />
         </GridPane.margin>
      </VBox>
   </children>
