<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="rootPane" prefHeight="720.0" prefWidth="1280.0" style="-fx-background-color: #000;" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="sample.topicListController">
   <children>
        <Label fx:id="mainLabel" layoutX="100.0" layoutY="100.0" text="Select the topic for your spelling quiz:" textFill="WHITE">
            <font>
                <Font name="Heiti TC Medium" size="35.0" />
            </font>
        </Label>
      <Label layoutX="100.0" layoutY="150.0" text="Note: first topic in the list is the default" textFill="#ff2917">
         <font>
            <Font name="Heiti TC Medium" size="25.0" />
         </font>
      </Label>
        <Button fx:id="backBtn" layoutX="1030.0" layoutY="100.0" mnemonicParsing="false" onAction="#backToMainMenu" prefHeight="40.0" prefWidth="150.0" text="Main Menu">
            <font>
                <Font name="Heiti TC Medium" size="20.0" />
            </font>
        </Button>
        <Button fx:id="selectBtn" layoutX="578.0" layoutY="575.0" mnemonicParsing="false" onAction="#selectTopic" prefHeight="50.0" prefWidth="125.0" text="Select">
            <font>
                <Font name="Heiti TC Medium" size="25.0" />
            </font>
        </Button>
        <TableView fx:id="table" layoutX="100.0" layoutY="200.0" prefHeight="350.0" prefWidth="1080.0" style="-fx-font-size: 20.0px;">
            <columns>
                <TableColumn fx:id="topicListColumn" editable="false" prefWidth="-1.0" sortable="false" text="Topic List" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
       <ImageView fitHeight="500.0" fitWidth="1280.0" preserveRatio="true">
           <image>
               <Image url="@images/koru1.png" />
           </image>
       </ImageView>
       <ImageView fitHeight="500.0" fitWidth="1280.0" layoutY="673.0" preserveRatio="true">
           <image>
               <Image url="@images/koru2.png" />
           </image>
       </ImageView>
   </children>
</AnchorPane>
