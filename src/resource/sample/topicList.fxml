<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Rectangle2D?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>


<AnchorPane fx:id="rootPane" prefHeight="720.0" prefWidth="1280.0" style="-fx-background-color: #000;" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.topicListController">
   <children>
        <Label fx:id="mainLabel" layoutX="100.0" layoutY="120.0" text="Select the topic for your spelling quiz:" textFill="WHITE">
            <font>
                <Font name="Heiti TC Medium" size="25.0" />
            </font>
        </Label>
        <Button fx:id="backBtn" layoutX="1070.0" layoutY="117.0" mnemonicParsing="false" onAction="#backToMainMenu" prefHeight="35.0" prefWidth="110.0" text="Main Menu">
            <font>
                <Font name="Heiti TC Medium" size="15.0" />
            </font>
        </Button>
        <Button fx:id="selectBtn" layoutX="600.0" layoutY="570.0" mnemonicParsing="false" onAction="#selectTopic" prefHeight="35.0" prefWidth="80.0" text="Select">
            <font>
                <Font name="Heiti TC Medium" size="15.0" />
            </font>
        </Button>
        <TableView fx:id="table" layoutX="100.0" layoutY="180.0" prefHeight="350.0" prefWidth="1080.0" style="-fx-font-size: 15.0px;">
            <columns>
                <TableColumn fx:id="topicListColumn" editable="false" prefWidth="-1.0" sortable="false" text="Topic List" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
        <ImageView fx:id="koruImg1" fitHeight="500.0" fitWidth="960.0" preserveRatio="true">
            <image>
                <Image url="@koru1.png" />
            </image>
            <viewport>
                <Rectangle2D />
            </viewport>
        </ImageView>
        <ImageView fx:id="koruImg2" fitHeight="500.0" fitWidth="960.0" layoutY="670.0" preserveRatio="true">
            <image>
                <Image url="@koru2.png" />
            </image>
            <viewport>
                <Rectangle2D />
            </viewport>
        </ImageView>
      <Label layoutX="723.0" layoutY="577.0" text="Note: the default topic will be the first one on the list" textFill="WHITE">
         <font>
            <Font size="20.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
